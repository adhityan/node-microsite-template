{
  "name": "node-microsite-template",
  "version": "1.0.0",
  "description": "ATemplate for node microservices",
  "main": "dist/app.js",
  "private": true,
  "scripts": {
    "start": "node dist/app.js",
    "build": "npm run clean && tsc",
    "start:dev": "ts-node-dev --files --respawn ./src/app.ts",
    "tc": "tsc --noEmit",
    "lint": "eslint 'src/**'",
    "lint:fix": "eslint --fix 'src/**'",
    "pretty": "prettier --write '**'",
    "pre-commit": "lint-staged",
    "clean": "rm -rf ./dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage && cat ./coverage/lcov.info"
  },
  "keywords": [],
  "author": "K V Adhityan",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adhityan/node-microsite-template"
  },
  "dependencies": {
    "@adhityan/gc-doc": "^2.3.0",
    "@adhityan/gc-logger": "^1.9.0",
    "@adhityan/gc-nats": "^2.3.3",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "class-validator": "^0.13.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "http-graceful-shutdown": "^3.0.1",
    "mysql2": "^2.2.5",
    "routing-controllers": "^0.9.0",
    "routing-controllers-openapi": "^3.0.0",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.31",
    "typeorm-typedi-extensions": "^0.4.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.35",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.22.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-sort-class-members": "^1.9.0",
    "eslint-plugin-sort-keys-fix": "^1.1.1",
    "eslint-plugin-unused-imports": "^1.1.0",
    "husky": "^5.2.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.2"
  }
}
