{
  "name": "node-microsite-template",
  "version": "1.1.0",
  "description": "ATemplate for node microservices",
  "main": "dist/app.js",
  "license": "ISC",
  "scripts": {
    "start": "node dist/index.js",
    "build": "ncc build src/app.ts",
    "start:dev": "ts-node-dev --files --respawn ./src/app.ts",
    "tc": "tsc --noEmit",
    "lint": "eslint 'src/**'",
    "lint:fix": "eslint --fix 'src/**'",
    "pretty": "prettier --write '**'",
    "pre-commit": "lint-staged",
    "clean": "rm -rf ./dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage && cat ./coverage/lcov.info"
  },
  "keywords": [],
  "author": "K V Adhityan",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adhityan/node-microsite-template"
  },
  "dependencies": {
    "@adhityan/gc-doc": "^1.3.7",
    "@adhityan/gc-logger": "^1.4.6",
    "body-parser": "^1.19.0",
    "class-validator": "^0.12.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "http-graceful-shutdown": "^2.3.2",
    "routing-controllers": "^0.9.0-alpha.6",
    "routing-controllers-openapi": "^2.0.1",
    "sqlite3": "^5.0.0",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.25",
    "typeorm-typedi-extensions": "^0.2.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.7",
    "@types/node": "^14.0.26",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "@zeit/ncc": "^0.22.3",
    "eslint": "^7.5.0",
    "eslint-config-airbnb-typescript": "^9.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.18.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-sort-class-members": "^1.7.0",
    "eslint-plugin-sort-keys-fix": "^1.1.1",
    "eslint-plugin-unused-imports": "^0.1.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "ts-node-dev": "^1.0.0-pre.56",
    "typescript": "^3.9.7"
  }
}
