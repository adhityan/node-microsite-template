{
  "name": "node-microsite-template",
  "version": "1.1.0",
  "description": "ATemplate for node microservices",
  "main": "dist/app.js",
  "private": true,
  "scripts": {
    "start": "node dist/app.js",
    "build": "npm run clean && tsc",
    "start:dev": "ts-node-dev --files --respawn ./src/app.ts",
    "tc": "tsc --noEmit",
    "lint": "eslint 'src/**'",
    "lint:fix": "eslint --fix 'src/**'",
    "pretty": "prettier --write '**'",
    "pre-commit": "lint-staged",
    "commit-lint": "commitlint",
    "clean": "rm -rf ./dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage && cat ./coverage/lcov.info",
    "prepare": "husky install"
  },
  "author": "K V Adhityan",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adhityan/node-microsite-template"
  },
  "dependencies": {
    "@adhityan/gc-doc": "^3.0.2",
    "@adhityan/gc-logger": "^3.1.7",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "class-validator": "^0.12.2",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "http-graceful-shutdown": "^3.1.4",
    "mysql2": "^2.3.0",
    "routing-controllers": "^0.9.0",
    "routing-controllers-openapi": "^3.1.0",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.37",
    "typeorm-typedi-extensions": "^0.4.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/body-parser": "^1.19.1",
    "@types/express": "^4.17.13",
    "@types/node": "^16.7.6",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-sort-class-members": "^1.11.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-unused-imports": "^1.1.4",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.2"
  }
}
