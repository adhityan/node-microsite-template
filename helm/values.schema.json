{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "required": [
        "image",
        "ingress"
    ],
    "properties": {
        "ingress": {
            "form": true,
            "type": "object",
            "title": "Ingress Details",
            "description": "The DNS and HTTPS certificates will be auto created",
            "required": [
                "host"
            ],
            "properties": {
                "host": {
                    "form": true,
                    "type": "string",
                    "title": "Hostname"
                }
            }
        },
        "image": {
            "form": true,
            "type": "object",
            "title": "Docker image",
            "description": "The docker image name and tag pushed from github",
            "required": [
                "repository"
            ],
            "properties": {
                "repository": {
                    "form": true,
                    "type": "string",
                    "title": "Image & Version"
                }
            }
        }
    }
}
